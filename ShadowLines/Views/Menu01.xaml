<Window x:Class="ShadowLines.Views.Menu01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadowLines.Views"
        mc:Ignorable="d"
        Title="Menu01" Height="589" Width="1161">

    <Grid Height="575" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Rectangle HorizontalAlignment="Left" 
                   Height="578"
                   VerticalAlignment="Top" 
                   Width="248" Fill="#FF190913" Margin="-1,-3,0,0"/>
        <Rectangle x:Name="Panel01" HorizontalAlignment="Left" 
            Height="68"
            VerticalAlignment="Top" 
            Width="189" Fill="White" Margin="43,133,0,0" RadiusX="15" RadiusY="15" Visibility="Hidden"/>

        <Image Margin="-2,-6,1005,473" Source="/Views/Images/ImgLogo.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-4.786"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Button Content="Cadastrar Clientes" HorizontalAlignment="Left" 
                Margin="43,146,0,0" VerticalAlignment="Top" Height="42"
                Width="183" Foreground="#FF5ACA00" Cursor="Hand"
                FontFamily="Arial Rounded MT Bold" FontSize="18" BorderBrush="#FF190913" Background="#FF190913"/>

        <Button Content="Clientes" HorizontalAlignment="Left" 
                Margin="43,206,0,0" VerticalAlignment="Top" 
                Height="42" Width="183" Cursor="Hand"
                Foreground="#FF5ACA00" FontFamily="Arial Rounded MT Bold" 
                FontSize="18" BorderBrush="#FF190913" Background="#FF190913"/>

        <Button Content="Agendamentos" HorizontalAlignment="Left" 
                Margin="43,265,0,0" VerticalAlignment="Top"
                Height="42" Width="183" Cursor="Hand"
                Foreground="#FF5ACA00" FontFamily="Arial Rounded MT Bold" 
                FontSize="18" BorderBrush="#FF190913" Background="#FF190913"/>

        <Button Content="Calendario" HorizontalAlignment="Left" 
                Margin="43,324,0,0" VerticalAlignment="Top" Height="42" 
                Width="183" Foreground="#FF5ACA00" Cursor="Hand"
                FontFamily="Arial Rounded MT Bold" FontSize="18" BorderBrush="#FF190913" Background="#FF190913"/>

        <Button Content="Cancelamento ou &#xD;&#xA;Remarcação" 
                HorizontalAlignment="Left" Margin="43,381,0,0" Cursor="Hand"
                VerticalAlignment="Top" Height="51" Width="183" Foreground="#FF5ACA00" 
                FontFamily="Arial Rounded MT Bold" FontSize="18" BorderBrush="#FF190913" Background="#FF190913"/>

    </Grid>

</Window>
